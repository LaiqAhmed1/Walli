<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WallpaperActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wallpaperActivityImgView"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"

        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        />

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progBarWallpaper"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btnSetWallpaper"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_style"
        android:text="Set Wallpaper"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:backgroundTint="#F4BA0A" />

        <Button
            android:layout_alignLeft="@+id/btnSetWallpaper"
            android:layout_alignEnd="@+id/btnSetWallpaper"
            android:id="@+id/btnSaveWallpaper"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Save"
            android:background="@drawable/button_style"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:backgroundTint="#F4BA0A"
            android:textSize="15sp"/>





</RelativeLayout>